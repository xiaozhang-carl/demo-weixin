/* pages/view/search.wxss */

.search-bar {
  display: inline-block;
  width: 100%;
  height: 60rpx;
  text-align: center;
}

.search-bar-title, .search-bar-icon {
  display: inline-block;
  vertical-align: middle;
}

.search-bar-title {
  width: 360rpx;
  color: #6bae23;
  font-size: 30rpx;
}

.search-bar-icon {
  width: 40rpx;
  height: 40rpx;
  text-align: right;
}

.search-search {
  width: 100%;
  display: flex;
  padding: 12rpx;
}

.search-search-input, .search-search-text {
  display: inline-block;
  vertical-align: middle;
  align-self: center;
}

.search-search-input {
  font-size: 26rpx;
  padding: 10rpx;
  border-radius: 20rpx;
  border: 1px solid gray;
  flex-grow: 1;
}

.search-search-text {
  width: 80rpx;
  font-size: 30rpx;
  padding: 12rpx;
}

.item-wrapper {
  width: 100%;
  margin: 10rpx;
  border-bottom: 1rpx solid gray;
}

.item-desc {
  display: block;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.item-publishedAt {
  font-size: 24rpx;
}

.empty-data {
  display: flex;
  justify-content: center;
  align-items: center;
}

