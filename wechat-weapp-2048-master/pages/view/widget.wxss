/* pages/view/widget.wxss */

.radio-wrapper {
  margin-left: 10%;
  margin-top: 10rpx;
  width: 80%;
  border-radius: 10rpx;
  border: 1rpx solid #61dffc;
  box-sizing: border-box;
  text-align: center;
}

.radio {
  display: inline-block;
  width: 50%;
  font-size: 30rpx;
  line-height: 2em;
}

.radio-checked {
  color: white;
  background-color: #61dffc;
}

.radio-unchecked {
  color: #61dffc;
}

.item-wrapper {
  display: flex;
  padding-top: 30rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  padding-bottom: 30rpx;
}

.item-img-wrapper, .item-content-wrapper {
  display: inline-block;
}

.item-img {
  width: 150rpx;
  height: 150rpx;
  display: block;
}

.item-content-wrapper {
  height: 150rpx;
  width: 100%;
  vertical-align: top;
  margin-left: 16rpx;
  position: relative;
}

.item-content-title, .item-content-date {
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  position: absolute;
}

.item-content-title {
  left: 0;
  top: 0;
  font-size: 30rpx;
  color: black;
  -webkit-line-clamp: 3;
}

.item-content-date {
  right: 0;
  bottom: 0;
  -webkit-line-clamp: 1;
  font-size: 26rpx;
  color: gray;
}

.box {
  display: -webkit-box;
  -webkit-box-orient: horizontal;
}

.box-text {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  background-color: green;
}
.box-text-1{
  -webkit-box-flex: 1;
}
.box-text-2{
  -webkit-box-flex: 2;
}
.box-text-3{
  -webkit-box-flex: 3;
}
