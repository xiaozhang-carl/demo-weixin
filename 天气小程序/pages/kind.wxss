/* pages/kind.wxss */

.item-wraaper-parent {
  background: white;
  margin-top: 20rpx;
}

.item-groupName-wrapper {
  display: flex;
  height: 100rpx;
  align-items: center;
  position: relative;
}

.item-groupName-line1 {
  display: inline-block;
  width: 8rpx;
  height: 100rpx;
  background: #048cff;
  position: absolute;
  left: 0;
}

.item-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 30rpx;
}

.item-groupName {
  font-family: SIL-Hei-Med-Jian;
  font-size: 32rpx;
  color: #333;
  flex: 1;
  margin-left: 20rpx;
}

.item-arrow {
  width: 20rpx;
  height: 20rpx;
  margin-right: 30rpx;
}

.item-groupName-line2 {
  height: 1rpx;
  background: #ddd;
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: flex;
}

.item-wraaper-child {
  display: flex;
  flex-wrap: wrap;
  padding: 2%;
}

.item-childName {
  display: inline-block;
  margin: 2%;
  width: 29.16%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-family: SIL-Hei-Med-Jian;
  font-size: 28rpx;
  color: #999;
  border: 1rpx solid #999;
  box-sizing: border-box;
}

.item-childName-checked {
  color: #048cff;
  border: 1rpx solid #048cff;
}
