/* pages/home/perm.wxss */

page {
  background: white;
  height: 100%;
}

.banners {
  width: 100%;
  height: 800rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  box-sizing: border-box;
}

.banner {
  width: 100%;
  height: 100%;
  display: block;
}

.wrapper1 {
  position: relative;
  padding-left: 25rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
}

.name {
  display: block;
  font-family: PingFangHK-Light;
  font-size: 36rpx;
  color: #000;
  letter-spacing: 0;
}

.desc {
  display: block;
  font-family: PingFangHK-Light;
  font-size: 26rpx;
  color: #9b9b9b;
}

.wrapper2 {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: left;
  margin-bottom: 60rpx;
}

.tip {
  width: 36rpx;
  height: 36rpx;
  margin-left: 25rpx;
}

.lable1, .lable2 {
  display: inline-block;
  width: 60rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-family: PingFangHK-Regular;
  font-size: 20rpx;
  color: #fff;
  background: #877fd4;
  text-align: center;
  margin-left: 4rpx;
  flex: none;
}

.price {
  font-family: PingFangHK-Regular;
  font-size: 52rpx;
  color: #877fd4;
  margin-left: 8rpx;
  text-decoration: line-through;
  margin-right: 25rpx;
  flex-grow: 2;
  text-align: right;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.hair-intro {
  font-family: PingFangHK-Light;
  font-size: 26rpx;
  color: #1c1c1c;
  display: block;
  text-align: center;
}
