/* pages/me/me.wxss */

.header {
  position: relative;
}

.header-bg {
  display: inline-block;
  height: 340rpx;
  width: 100%;
}

.user-icon {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  top: 50rpx;
}
.user-name{
  display: inline-block;
  width: 100%;
  text-align: center;
  color: black;
  font-size: 36rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 50rpx;
}

.items-wrapper {
  display: inline-block;
  width: 100%;
  background-color: white;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 20rpx;
}

.item-wraaper {
  display: flex;
  position: relative;
  width: 100%;
  height: 120rpx;
  align-items: center;
  border-bottom: 0.1rpx dashed #F4F4F4;
}

.item-icon {
  width: 26rpx;
  height: 26rpx;
  margin-left: 14rpx;
}

.item-name {
  font-size: 32rpx;
  color: #4a4a4a;
  margin-left: 12rpx;
  line-height: 1em;
}

