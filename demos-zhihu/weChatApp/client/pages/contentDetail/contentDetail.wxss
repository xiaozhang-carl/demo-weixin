page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  position: relative;
  color: #323233;
  height: 100%;
}
.search-wrapper{
  width: 750rpx;
  height: 100rpx;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
}
.search-input,
.search-mask-input{
  width: 560rpx;
  height: 70rpx;
  margin: 15rpx 20rpx;
  display: inline-block;
  vertical-align: middle;
  background: #F6F6F6;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 70rpx;
  color: #cdcdcd;
}
.search-button{
  width: 110rpx;
  height: 80rpx;
  font-size: 28rpx;
  display: inline-block;
  vertical-align: middle;
  line-height: 80rpx;
}
.search-input-icon,
.search-button-icon{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
}
.search-input-icon{
  width: 30rpx;
  height: 30rpx;
  margin-bottom: 5rpx;
  line-height: 70rpx;
  display: inline-block;
  vertical-align: middle;
}
.search-button-text{
  color: #1E8AE8;
  display: inline-block;
  vertical-align: middle;
}
.content-detail{
  margin-top: 100rpx;
  width: 100%;
  font-size: 28rpx;
}
.content-detail-title{
  font-size: 32rpx;
  font-weight: 500;
  width: 700rpx;
  padding: 20rpx 25rpx;
  background: #fff;
}
.content-detail-answer{
  width: 700rpx;
  padding: 20rpx 25rpx;
  background: #fff;
  overflow: hidden;
}
.content-detail-bottom{
  float: right;
  margin-right: 40rpx;
  margin-top: 100rpx;
  text-align: center;
  color: #999;
}
.content-detail-footer{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  color: #999;
  border-top: 1rpx solid rgba(0, 0, 0, 0.2);
  padding: 10rpx 0;
}
.content-footer-item{
  display: inline-block;
  width: 24%;
  font-size: 24rpx;
}
.content-footer-image{
  width: 40rpx;
  height: 40rpx;
}